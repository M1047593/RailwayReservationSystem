
@{
    ViewBag.Title = "AddStation";
}


<style>
    body {
        padding-top: 50px;
    }

    fieldset {
        border: thin solid #ccc;
        border-radius: 4px;
        padding: 20px;
        background: #fbfbfb;
        width: 60%;
        margin: auto;
    }

    legend {
        color: #678;
    }

    .form-control {
        width: 95%;
    }

    label small {
        color: #678 !important;
    }

    span.req {
        color: maroon;
        font-size: 112%;
    }
</style>
<script type="text/javascript">
    function AddStation() {
            $.ajax({
            url: '@Url.Action("AddStation", "Railway")',
            type: "GET",
            data: { stationid: $('#txtid').val(), stationname: $('#txtstationname').val()},
            success: function (result) {
                $("#divSuccess").show();
                $("#divSuccess").html("Station added Successfully");            
                $('input[type=text],input[type=number],input[type=Date],select').val("");               
            },
            error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }

    //});
</script>

<form autocomplete="off">  
    <div class="container">
        <div id="divSuccess" class="alert alert-success alert-dismissible" style="display:none">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Success!</strong> This alert box could indicate a successful or positive action.
        </div>
        <fieldset>
            <legend class="text-center">Add Station. <span class="req"></span></legend>
            <div class="col-md-6" style="margin-left:35%">
                <div class="form-group">
                    <label for="stationid"><span class="req">* </span> Station ID: </label>
                    <input class="form-control" type="number" name="stationid" id="txtid" onkeyup="Validate(this)" required placeholder="Station Id" />
                    <div id="errFirst"></div>
                </div>
                <div class="form-group">
                    <label for="Name"><span class="req">* </span> Station Name: </label>
                    <input class="form-control" required type="text" name="txtstationname" id="txtstationname" placeholder="Station Name" />
                    <div class="status" id="status"></div>
                </div>


                </div>
                <div class="col-md-6" style="margin-left:35%">
                    <div class="form-group">
                        <input class="btn btn-success" type="button" name="submit_reg" value="Submit" onclick="AddStation();">
                        <input class="btn btn-success" type="submit" name="submit_reg" value="Cancel">
                    </div>
                </div>

                
            </fieldset>
</div>
</form>






